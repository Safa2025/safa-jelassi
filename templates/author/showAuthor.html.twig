{% extends 'base.html.twig' %}

{% block title %}Détails de l'auteur{% endblock %}

{% block body %}
<h1>Détails de l'auteur</h1>

<div>
    <img src="{{ author.picture }}" alt="{{ author.username }}" width="150">
    <p><strong>Nom :</strong> {{ author.username|upper }}</p>
    <p><strong>Email :</strong> {{ author.email }}</p>
    <p><strong>Nombre de livres :</strong> {{ author.nb_books }}</p>
</div>

<a href="{{ path('list_authors') }}">← Retour à la liste</a>    

<a href="{{ path('list_authors') }}">lien 1</a>    
<a href="{{ url('list_authors') }}">lien 2</a>   
<img src="{{ asset('images/Taha-Hussein.jpg') }}" alt="Taha Hussein">
{% endblock %}

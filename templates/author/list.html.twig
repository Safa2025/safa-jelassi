{% extends 'base.html.twig' %}

{% block title %}Liste des auteurs{% endblock %}

{% block body %}
<h1>Liste des auteurs</h1>

<a href="{{ path('author_new') }}">Ajouter un auteur</a>

<p>Nombre d'auteurs : {{ authors|length }}</p>

<table border="1" cellpadding="5" cellspacing="0">
    <thead>
        <tr>
            <th>Nom</th>
            <th>Email</th>
            <th>Nb Books</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        {% for author in authors %}
            <tr>
                <td>{{ author.username }}</td>
                <td>{{ author.email }}</td>
                <td>{{ author.nbBooks }}</td>
                <td>
                    <a href="{{ path('show_author', {'id': author.id}) }}">Voir détails</a> |
                    <a href="{{ path('author_edit', {'id': author.id}) }}">Modifier</a> |
                    <a href="{{ path('author_delete', {'id': author.id}) }}">Supprimer</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">Aucun auteur trouvé</td>
            </tr>
        {% endfor %}
    </tbody>
</table>
{% endblock %}
